<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="borderPane" styleClass="borderPane" stylesheets="@../css/vehicle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.mazi.transportdesktopapp.Controller.VehicleController">
   <center>
      <TableView fx:id="vehicleTableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="tableColumn_idVehicle" maxWidth="60.0" minWidth="40.0" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="tableColumn_driver" maxWidth="200.0" minWidth="75.0" prefWidth="75.0" text="Kierowca" />
            <TableColumn fx:id="tableColumn_mark" maxWidth="150.0" minWidth="75.0" prefWidth="75.0" text="Marka" />
            <TableColumn fx:id="tableColumn_model" maxWidth="150.0" minWidth="75.0" prefWidth="75.0" text="Model" />
            <TableColumn fx:id="tableColumn_vehicleType" maxWidth="200.0" minWidth="50.0" prefWidth="50.0" text="Typ pojazdu" />
            <TableColumn fx:id="tableColumn_mileage" maxWidth="150.0" prefWidth="150.0" text="Przebieg" />
            <TableColumn fx:id="tableColumn_vinNumber" maxWidth="250.0" minWidth="50.0" prefWidth="50.0" text="Numer vin" />
            <TableColumn fx:id="tableColumn_weight" maxWidth="150.0" minWidth="75.0" prefWidth="100.0" text="Waga" />
            <TableColumn fx:id="tableColumn_platenumber" maxWidth="150.0" minWidth="75.0" prefWidth="150.0" text="Numer rejestracyjny" />
            <TableColumn fx:id="tableColumn_dateOfTechnicalInspection" maxWidth="150.0" minWidth="75.0" prefWidth="150.0" text="Termin badania technicznego" />
            <TableColumn fx:id="tableColumn_buttons" maxWidth="300.0" minWidth="250.0" prefWidth="300.0" text="Co zrobic?" />
         </columns>
      </TableView>
   </center>
   <top>
      <HBox alignment="CENTER_LEFT" styleClass="hbox" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="button_add" mnemonicParsing="false" styleClass="custom_button_blue" text="Dodaj" />
            <Button fx:id="button_refresh" mnemonicParsing="false" styleClass="custom_button_blue" text="Odśwież" />
            <Button fx:id="button_openMenageVehicleType" mnemonicParsing="false" styleClass="custom_button_blue" text="Zarządzaj typami pojazdu" />
         </children>
      </HBox>
   </top>
</BorderPane>
